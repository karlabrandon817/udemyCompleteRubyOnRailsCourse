<h1 align="center">All Alpha Bloggers</h1>
<div class="center">
  <%= will_paginate %>
</div>
  <% @users.each do |user| %>
    <ul class="user-listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title"><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete User", user_path(user), method: :delete, 
                data: { confirm: "Are you sure you want to delete #{user.username} and all articles by #{user.username}?" },
                class:"btn btn-xs btn-danger article-btns" %>
            </li>
          <% end %>      
        </div>
      </div>
    </ul>
  <% end %>
<div class="center">
  <%= will_paginate %>
</div>